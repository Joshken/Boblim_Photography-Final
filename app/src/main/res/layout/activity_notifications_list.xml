<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/backarrow"
                android:tint="#B22222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#B22222"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previously"
            android:textColor="#333333"
            android:textSize="25sp"
            android:layout_marginTop="16dp" />

        <!-- Notifications List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Notification Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5E1E1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- Notification Icon -->
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:id="@+id/notificationIcon1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification_bell"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Red Dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/red_dot"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Title -->
                        <TextView
                            android:id="@+id/notificationTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photos Released"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/notificationIcon1"
                            android:layout_marginStart="8dp" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/notificationDate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec. 16, 2025"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_alignParentEnd="true" />

                        <!-- Message -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your BP Hardcopy is available at Boblim Photography"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_below="@id/notificationTitle1"
                            android:layout_marginStart="36dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notification Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5E1E1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- Notification Icon -->
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:id="@+id/notificationIcon2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification_bell"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Red Dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/red_dot"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Title -->
                        <TextView
                            android:id="@+id/notificationTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photos Released"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/notificationIcon2"
                            android:layout_marginStart="8dp" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/notificationDate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec. 16, 2025"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_alignParentEnd="true" />

                        <!-- Message -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your BP Hardcopy is available at Boblim Photography"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_below="@id/notificationTitle2"
                            android:layout_marginStart="36dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notification Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5E1E1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- Notification Icon -->
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:id="@+id/notificationIcon3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification_bell"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Red Dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/red_dot"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Title -->
                        <TextView
                            android:id="@+id/notificationTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photos Released"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/notificationIcon3"
                            android:layout_marginStart="8dp" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/notificationDate3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec. 16, 2025"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_alignParentEnd="true" />

                        <!-- Message -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your BP Hardcopy is available at Boblim Photography"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_below="@id/notificationTitle3"
                            android:layout_marginStart="36dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notification Item 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5E1E1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- Notification Icon -->
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:id="@+id/notificationIcon4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification_bell"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Red Dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/red_dot"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Title -->
                        <TextView
                            android:id="@+id/notificationTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photos Released"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/notificationIcon4"
                            android:layout_marginStart="8dp" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/notificationDate4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec. 16, 2025"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_alignParentEnd="true" />

                        <!-- Message -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your BP Hardcopy is available at Boblim Photography"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_below="@id/notificationTitle4"
                            android:layout_marginStart="36dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <!-- Missing Notifications Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <!-- Missing Notifications Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing Notifications?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Go to Historical Notifications Link -->
            <TextView
                android:id="@+id/historicalLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Go to Historical Notifications"
                android:textColor="#2196F3"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Mark as All Read Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/markAllReadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#B22222">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark as All Read"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp" />
        </androidx.cardview.widget.CardView>

        <!-- Help Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Do you need some help?"
            android:textColor="#5F6368"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout> 