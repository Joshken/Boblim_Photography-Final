<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- White curved overlay -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button and Bell -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Back Button -->
            <LinearLayout
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/backarrow"
                    android:contentDescription="Back arrow"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/backText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Back"
                    android:textColor="@color/burgundy"
                    android:textSize="18sp"
                    android:gravity="center_vertical" />
            </LinearLayout>


            <!-- Notification Bell -->
            <ImageView
                android:id="@+id/notificationBell"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/notification_bell"
                android:tint="@android:color/white" />
        </RelativeLayout>

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PACKAGE LIST"
            android:textColor="@color/burgundy"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Package Type Button -->
        <TextView
            android:id="@+id/packageTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_red_bg"
            android:text="Search Packages"
            android:drawableEnd="@drawable/ic_dropdown"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Package Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Package A Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageACard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE A - ₱1,300"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:text="3 poses (toga, executive, barong/filipiniana)\n\n1 – 11R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n5 – 2x2 toga\n4 – 1x1 toga\n1 – 8R executive\n2 – 2R executive\n1 – 8R barong/filipiniana\n2 – 2R barong/filipiniana"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package B Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageBCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE B - ₱1,095"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/white"
                            android:lineSpacingExtra="4dp"
                            android:text="2 poses (toga, executive or barong/filipiniana)\n\n1 – 11R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n5 – 2x2 toga\n4 – 1x1 toga\n1 – 8R executive or barong/filipiniana\n2 – 2R executive or barong/filipiniana"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package C Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageCCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE C - ₱895"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="1 pose (toga)\n\n1 – 8R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n4 – 2x2 toga\n8 – 1x1 toga"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package D Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE D - ₱1,550"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="4 poses (toga, executive, barong/filipiniana)\n\n1 – 11R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n5 – 2x2 toga\n4 – 1x1 toga\n1 – 8R toga with cap\n2 – 2R toga with cap\n1 – 8R executive\n2 – 2R executive\n1 – 8R barong/filipiniana\n2 – 2R barong/filipiniana"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package E Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageECard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE E - ₱1,345"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="3 poses (toga, executive or barong/filipiniana)\n\n1 – 11R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n5 – 2x2 toga\n4 – 1x1 toga\n1 – 8R toga with cap\n2 – 2R toga with cap\n1 – 8R executive or barong/filipiniana\n2 – 2R executive or barong/filipiniana"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package F Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageFCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE F - ₱1,145"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="2 poses (toga)\n\n1 – 8R toga\n4 – 2R toga\n2 – 2R toga (black &amp; white)\n4 – 2x2 toga\n8 – 1x1 toga\n1 – 8R toga with cap\n2 – 2R toga with cap"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package M Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageMCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE M - ₱2,300"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="3 poses (toga, executive, barong/filipiniana)\n\n1 – 8R toga\n4 – 2R toga\n2 – 2R black &amp; white\n1 – 8R executive\n1 – 8R barong/filipiniana\n5 – 2x2\n2 – 2R executive\n2 – 2R barong/filipiniana\n4 – 1x1"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Package N Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/packageNCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Package Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B22222"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="PACKAGE N - ₱2,500"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Package Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:background="@color/white"
                            android:text="3 poses (toga, executive, barong/filipiniana)\n\n1 – 11R toga\n4 – 2R toga\n2 – 2R black &amp; white\n1 – 8R executive\n1 – 8R barong/filipiniana\n5 – 2x2\n2 – 2R executive\n2 – 2R barong/filipiniana\n4 – 1x1"
                            android:textColor="#666666"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <!-- Removed the bottom navigation bar here -->
</RelativeLayout>